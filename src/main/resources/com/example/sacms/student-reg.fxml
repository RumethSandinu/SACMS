<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane fx:id="studentAnchor" prefHeight="500.0" prefWidth="800.0" styleClass="mainAnchor" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sacms.UserRegMainController">
   <stylesheets>
      <URL value="@../../../Styles/MainPage.css" />
      <URL value="@../../../Styles/Buttons.css" />
   </stylesheets>
   <children>
      <Button layoutX="22.0" layoutY="13.0" mnemonicParsing="false" onMouseClicked="#backButton" prefHeight="27.0" prefWidth="35.0" styleClass="buttonBorder">
         <graphic>
            <FontIcon iconLiteral="ion4-ios-arrow-round-back" iconSize="40" />
         </graphic>
      </Button>
      <TextField fx:id="studentIdBox" layoutX="100.0" layoutY="153.0" prefHeight="35.0" prefWidth="200.0" promptText="Student ID..." />
      <TextField fx:id="studentPassBox" layoutX="100.0" layoutY="224.0" prefHeight="35.0" prefWidth="200.0" promptText="Password..." />
      <ImageView fx:id="studentLogImage" fitHeight="500.0" fitWidth="400.0" layoutX="400.0" pickOnBounds="true" preserveRatio="true" />
      <Label layoutX="100.0" layoutY="90.0" text="Student Login" textFill="WHITE">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
      <Button fx:id="studentLoginButton" layoutX="100.0" layoutY="321.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="200.0" text="Login" textFill="#00a7c5">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Button>
      <Label layoutX="100.0" layoutY="286.0" text="Don't have an account yet?" textFill="WHITE">
         <font>
            <Font name="System Bold" size="11.0" />
         </font>
      </Label>
      <Button layoutX="239.0" layoutY="281.0" mnemonicParsing="false" styleClass="buttonBorder" text="Register" textFill="#00a7c5" underline="true">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
